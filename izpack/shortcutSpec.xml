<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>    
    <programGroup defaultName="HL7 Inspector 2.1.0" location="applications"/>
   
    <shortcut
        name="HL7 Inspector"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\hl7inspector.exe"
        workingDirectory="$INSTALL_PATH"
        commandLine=""
        description="HL7 Inspector">
     
        <createForPack name="Core" />
    </shortcut>   

    <shortcut
        name="Documentation"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\doc\html\index.html"
        commandLine=""
        description="HL7 Inspector documentation (HTML format)">
     
        <createForPack name="Documentation-HTML" />
    </shortcut>
   
    <shortcut
        name="Documentation"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\doc\pdf\hl7inspector.pdf"
        commandLine=""
        description="HL7 Inspector documentation (PDF format)">
     
        <createForPack name="Documentation-PDF" />
    </shortcut>
   
    <shortcut
        name="Uninstaller"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstaller\uninstaller.jar"     
        commandLine=""
        iconFile="%SystemRoot%\system32\SHELL32.dll"
        iconIndex="31" 
        description="HL7 Inspector uninstaller">
     
        <createForPack name="Core" />
    </shortcut>
    
    <shortcut
        name="Samples"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\samples\"     
        commandLine=""
        description="Profile and HL7 message samples">
     
        <createForPack name="Samples" />
    </shortcut>
</shortcuts>
